{{yield}}
{{#if formShowing}}
  <form class="form-group">
    <label for="new-section">Add a Category</label>
    {{input value=section}}
    <br>
    <label for="new-location">Add Location</label>
    {{input value=location}}
    <br>
    <button {{ action 'createCategory' }} class='btn btn-default'>Confirm</button>
  </form>
  {{ else }}
    <button {{action 'showForm'}} class='btn btn-default'>Add a new category</button>
{{/if}}
